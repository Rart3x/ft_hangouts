<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/myToolbarFooter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/callsButton"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/calls_asset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="676dp"
            android:onClick="callsRedirection">
        </Button>

        <Button
            android:id="@+id/messagesButton"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/messages_asset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="675dp"
            android:onClick="messagesRedirection">
        </Button>

        <Button
            android:id="@+id/contactsButton"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/contacts_asset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="675dp"
            android:onClick="contactsRedirection">
        </Button>
    </Toolbar>
</RelativeLayout>